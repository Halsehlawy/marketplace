<%- include('./partials/head') %>

<div class="container">
    <% if (user) { %>
        <!-- Logged In User View -->
        <div class="row justify-content-center my-5">
            <div class="col-lg-8">
                <div class="text-center mb-5">
                    <h1 class="display-4 text-primary">Welcome back, <%= user.username %>! ðŸ‘‹</h1>
                    <p class="lead text-muted">Ready to buy or sell something today?</p>
                </div>
                
                <div class="row g-4">
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm border-success">
                            <div class="card-body text-center">
                                <div class="mb-3">
                                    <i class="bi bi-plus-circle" style="font-size: 3rem; color: #28a745;"></i>
                                </div>
                                <h5 class="card-title">Sell an Item</h5>
                                <p class="card-text">List something you want to sell</p>
                                <a href="/listings/new" class="btn btn-success">Add Listing</a>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm border-primary">
                            <div class="card-body text-center">
                                <div class="mb-3">
                                    <i class="bi bi-grid-3x3-gap" style="font-size: 3rem; color: #007bff;"></i>
                                </div>
                                <h5 class="card-title">Browse Items</h5>
                                <p class="card-text">See what others are selling</p>
                                <a href="/listings/" class="btn btn-primary">All Listings</a>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm border-warning">
                            <div class="card-body text-center">
                                <div class="mb-3">
                                    <i class="bi bi-person-circle" style="font-size: 3rem; color: #ffc107;"></i>
                                </div>
                                <h5 class="card-title">Account</h5>
                                <p class="card-text">Manage your account settings</p>
                                <a href="/auth/log-out" class="btn btn-outline-secondary">Sign Out</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% } else { %>
        <!-- Guest User View -->
        <div class="row justify-content-center my-5">
            <div class="col-lg-8">
                <div class="text-center mb-5">
                    <h1 class="display-3 text-primary mb-4">ðŸ›’ Welcome to Marketplace</h1>
                    <p class="lead text-muted mb-4">Your local marketplace for buying and selling items</p>
                    <p class="text-muted">Join our community to start trading!</p>
                </div>
                
                <div class="row g-4 justify-content-center">
                    <div class="col-md-5">
                        <div class="card h-100 shadow border-primary">
                            <div class="card-body text-center">
                                <div class="mb-3">
                                    <i class="bi bi-person-plus" style="font-size: 3rem; color: #007bff;"></i>
                                </div>
                                <h5 class="card-title">New to Marketplace?</h5>
                                <p class="card-text">Create an account to start buying and selling</p>
                                <a href="/auth/sign-up" class="btn btn-primary btn-lg">Sign Up</a>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-5">
                        <div class="card h-100 shadow border-success">
                            <div class="card-body text-center">
                                <div class="mb-3">
                                    <i class="bi bi-box-arrow-in-right" style="font-size: 3rem; color: #28a745;"></i>
                                </div>
                                <h5 class="card-title">Already a member?</h5>
                                <p class="card-text">Sign in to access your account</p>
                                <a href="/auth/log-in" class="btn btn-success btn-lg">Sign In</a>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="text-center mt-5">
                    <div class="row g-4">
                        <div class="col-md-4">
                            <div class="p-3">
                                <i class="bi bi-shield-check" style="font-size: 2rem; color: #28a745;"></i>
                                <h6 class="mt-2">Safe & Secure</h6>
                                <small class="text-muted">Your transactions are protected</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="p-3">
                                <i class="bi bi-people" style="font-size: 2rem; color: #007bff;"></i>
                                <h6 class="mt-2">Community Driven</h6>
                                <small class="text-muted">Connect with local buyers and sellers</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="p-3">
                                <i class="bi bi-lightning" style="font-size: 2rem; color: #ffc107;"></i>
                                <h6 class="mt-2">Easy to Use</h6>
                                <small class="text-muted">List items in minutes</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</div>

</body>
</html>