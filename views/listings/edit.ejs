<%- include('../partials/head') %>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="mb-0">‚úèÔ∏è Edit Listing</h2>
                        <a href="/listings/<%= foundListing._id %>" class="btn btn-outline-dark btn-sm">
                            ‚Üê Back to Listing
                        </a>
                    </div>
                </div>
                
                <div class="card-body">
                    <form action="/listings/<%= foundListing._id %>?_method=PUT" method="POST">
                        <div class="mb-3">
                            <label for="title" class="form-label fw-bold">Title</label>
                            <input type="text" 
                                   name="title" 
                                   id="title" 
                                   class="form-control" 
                                   value="<%= foundListing.title %>" 
                                   required>
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label fw-bold">Description</label>
                            <textarea name="description" 
                                      id="description" 
                                      class="form-control" 
                                      rows="4" 
                                      required><%= foundListing.description %></textarea>
                        </div>

                        <div class="mb-3">
                            <label for="price" class="form-label fw-bold">Price (BHD)</label>
                            <div class="input-group">
                                <span class="input-group-text">üí∞</span>
                                <input type="number" 
                                       name="price" 
                                       id="price" 
                                       class="form-control" 
                                       value="<%= foundListing.price %>" 
                                       step="0.01" 
                                       min="0" 
                                       required>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label for="image" class="form-label fw-bold">Image URL</label>
                            <input type="url" 
                                   name="image" 
                                   id="image" 
                                   class="form-control" 
                                   value="<%= foundListing.image && foundListing.image.url ? foundListing.image.url : '' %>" 
                                   placeholder="https://example.com/image.jpg">
                            <div class="form-text">Optional: Provide a URL to an image for your listing</div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-warning btn-lg">
                                ‚úèÔ∏è Update Listing
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

</body>
</html>