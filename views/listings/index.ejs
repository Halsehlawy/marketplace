<%- include('../partials/head') %>
<div class="container my-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="display-4">Marketplace Listings</h1>
                <a href="/listings/new" class="btn btn-primary btn-lg">
                    <i class="bi bi-plus-circle"></i> Add New Listing
                </a>
            </div>
        </div>
    </div>

    <div class="row g-4">
                        <% if (foundListings && foundListings.length > 0) { %>
            <% foundListings.forEach(listing => { %>
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
                            <% if (listing.image && listing.image.url) { %>
                                <img src="<%= listing.image.url %>" alt="<%= listing.title %>" class="card-img-top" style="height: 200px; object-fit: cover;">
                            <% } %>
                            <div class="card-body">
                                <h5 class="card-title"><%= listing.title %></h5>
                                <p class="card-text text-muted"><%= listing.description %></p>
                                <h4 class="text-success fw-bold"><%= listing.price %> BD</h4>
                            </div>
                            <div class="card-footer bg-transparent">
                                <small class="text-muted">
                                    Posted: <%= new Date(listing.createdAt).toLocaleDateString() %>
                                    <% if (listing.seller && listing.seller.username) { %>
                                        <br>Sold By: <span class="fw-semibold"><%= listing.seller.username %></span>
                                    <% } %>
                                </small>
                            </div>
                        </a>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="col-12">
                <div class="text-center py-5">
                    <div class="mb-4">
                        <i class="bi bi-box-seam" style="font-size: 4rem; color: #6c757d;"></i>
                    </div>
                    <h3 class="text-muted">No listings found</h3>
                    <p class="text-muted mb-4">Be the first to create a listing!</p>
                    <a href="/listings/new" class="btn btn-primary btn-lg">Create the first listing!</a>
                </div>
            </div>
        <% } %>
    </div>
</div>

</body>
</html>